<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/f_list_item_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/round_background_plain"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pdf_file_icon" />

    <TextView
        android:id="@+id/f_list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Archives de la gare saint-lazare"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_list_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_list_item_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="31dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:text="Paris"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/f_list_item_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="23dp"
        android:layout_height="31dp"
        app:layout_constraintStart_toEndOf="@+id/f_list_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/f_list_item_title"
        app:srcCompat="@drawable/ic_google_maps_pin" />

</androidx.constraintlayout.widget.ConstraintLayout>