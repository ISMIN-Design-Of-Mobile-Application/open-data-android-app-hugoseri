<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfosFragment">

    <ImageView
        android:id="@+id/f_infos_img_type_data"
        android:layout_width="46dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_pdf_file_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_img_preview" />

    <TextView
        android:id="@+id/f_infos_txt_titre"
        android:layout_width="303dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:text="Titre"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_infos_img_type_data"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_img_preview" />

    <ImageView
        android:id="@+id/f_infos_img_pin"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_google_maps_pin"
        app:layout_constraintStart_toEndOf="@+id/f_infos_img_type_data"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_txt_titre" />

    <TextView
        android:id="@+id/f_infos_txt_ville"
        android:layout_width="267dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Ville"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/f_infos_img_pin"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_txt_titre" />

    <TextView
        android:id="@+id/f_infos_fixed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_img_pin" />

    <TextView
        android:id="@+id/f_infos_txt_description"
        android:layout_width="379dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="C'est la decription du contenue. On peut y trouver beaucoup de choses, vraiment beaucoup, beaucoup beaucoup. Parmis ces choses il y a des mots mais aussi des nombres."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_fixed_description"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/f_infos_img_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="437dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:scrollbarSize="4sp"
        app:layout_constraintBottom_toTopOf="@+id/f_infos_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[3]" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/f_infos_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:clickable="true"
        android:src="@drawable/ic_earth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_infos_img_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>